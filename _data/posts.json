---
title: posts
---

[{%- for post in site.posts -%}
{
    "id": "{{ post.id }}",
    "title": "{{ post.title }}",
    "excerpt": "{{ post.excerpt }}",
    "url": "{{ post.url }}",
    "date": "{{ post.date }}",
    "categories": {{ post.categories | jsonify }},
    "tags": {{ post.tags | jsonify }}
}{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}]
